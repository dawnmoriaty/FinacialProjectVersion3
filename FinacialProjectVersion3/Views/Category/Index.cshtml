@using FinacialProjectVersion3.ViewModels.Category
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "Danh mục của tôi";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-list"></i> Danh mục của tôi
                    </h4>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm danh mục
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <!-- Hiển thị danh sách categories -->
                        <div class="row">
                            @foreach (var category in Model)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 class="card-title">@category.Name</h6>
                                            <p class="card-text">
                                                <span class="badge @(category.Type == "income" ? "bg-success" : "bg-danger")">
                                                    @category.Type
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <h5 class="text-muted">Chưa có danh mục nào</h5>
                            <a href="@Url.Action("Create")" class="btn btn-primary">Thêm danh mục đầu tiên</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>