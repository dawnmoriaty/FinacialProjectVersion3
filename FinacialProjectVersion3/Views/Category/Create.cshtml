@model FinacialProjectVersion3.ViewModels.Category.CreateCategoryViewModel
@{
    ViewData["Title"] = "Thêm danh mục";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Thêm danh mục mới</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label"></label>
                <select asp-for="Type" asp-items="Model.CategoryTypes" class="form-select">
                    <option value="">-- Chọn loại danh mục --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="IconPath" class="form-label"></label>
                <div class="icon-selection">
                    @foreach (var icon in Model.Icons)
                    {
                        <div class="form-check form-check-inline icon-option">
                            <input class="form-check-input" type="radio" name="IconPath"
                                   id="icon-@icon.Value" value="@icon.Value"
                            @(icon.Value == Model.IconPath ? "checked" : "") />
                            <label class="form-check-label icon-label" for="icon-@icon.Value">
                                <i class="fas @icon.Value fa-2x"></i>
                                <span class="icon-text">@icon.Text</span>
                            </label>
                        </div>
                    }
                </div>
                <span asp-validation-for="IconPath" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu danh mục
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Highlight selected icon
            $('.icon-option input').change(function() {
                $('.icon-option').removeClass('selected');
                if ($(this).is(':checked')) {
                    $(this).closest('.icon-option').addClass('selected');
                }
            });

            // Highlight initially selected icon if any
            $('.icon-option input:checked').closest('.icon-option').addClass('selected');
        });
    </script>
}

<style>
    .icon-selection {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 10px;
    }

    .icon-option {
        margin: 0;
        padding: 0;
        width: 100px;
        height: 80px;
        position: relative;
    }

    .icon-option input {
        position: absolute;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
        z-index: 2;
    }

    .icon-label {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 8px;
        cursor: pointer;
        transition: all 0.2s;
    }

    .icon-text {
        font-size: 0.8rem;
        margin-top: 5px;
        text-align: center;
        max-width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .icon-option.selected .icon-label {
        background-color: #e3f2fd;
        border-color: #0d6efd;
        color: #0d6efd;
    }
</style>