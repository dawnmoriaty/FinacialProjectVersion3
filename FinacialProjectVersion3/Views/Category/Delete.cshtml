@model FinacialProjectVersion3.ViewModels.Category.CategoryViewModel
@{
    ViewData["Title"] = "Xóa danh mục";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-trash"></i> Xác nhận xóa danh mục
                    </h4>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                        <div>
                            <strong>Cảnh báo!</strong><br>
                            Bạn có chắc chắn muốn xóa danh mục này không? Hành động này không thể hoàn tác.
                        </div>
                    </div>

                    <!-- Thông tin danh mục -->
                    <div class="card bg-light">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    @if (!string.IsNullOrEmpty(Model.IconPath))
                                    {
                                        <i class="fas @Model.IconPath fa-3x text-primary"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-folder fa-3x text-muted"></i>
                                    }
                                </div>
                                <div class="col">
                                    <h5 class="mb-1">@Model.Name</h5>
                                    <span class="badge @Model.TypeBadgeClass">@Model.TypeDisplay</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form xóa -->
                    <form asp-action="Delete" method="post" class="mt-3">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Xóa vĩnh viễn
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>